# Server Configuration
PORT=6789

# Authentication
# Required: API key for authenticating proxy requests
PROXY_API_KEY=your-secure-api-key-here

# Timeouts
# Request timeout in milliseconds (default: 5 minutes)
REQUEST_TIMEOUT_MS=300000

# Logging
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Worker Pool (Phase 2)
# Number of concurrent Claude processes
WORKER_CONCURRENCY=2

# Maximum requests in queue before rejecting with 429
MAX_QUEUE_SIZE=100

# Maximum time a request can wait in queue (milliseconds)
QUEUE_TIMEOUT_MS=60000

# Session Management (Phase 3)
# Session time-to-live in milliseconds (default: 1 hour)
SESSION_TTL_MS=3600000

# Maximum sessions per API key
MAX_SESSIONS_PER_KEY=10

# Session cleanup interval in milliseconds
SESSION_CLEANUP_INTERVAL_MS=60000

# Session database path (default: ./data/sessions.db)
# Use :memory: for in-memory only (no persistence)
SESSION_DB_PATH=./data/sessions.db

# Working directory for Claude CLI execution
# Defaults to ~/claudewksp if not specified
# DEFAULT_WORKSPACE_DIR=/path/to/workspace
